def sample_proc:
  play 'sample_sound'
  $mobile = keycheck 'sample_sound', 10
  goto get_account


def get_account:
  $account = db_find 'account', %'{"mobile": $mobile}'
  if $account == nil
    $account = db_insert 'account', %'{"mobile": $mobile, "tp": 0, "questions": []}'
  end
